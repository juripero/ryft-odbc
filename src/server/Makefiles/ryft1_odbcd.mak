##--------------------------------------------------------------------------------------------------
## Static libraries to build
##--------------------------------------------------------------------------------------------------

LIBS = 


##--------------------------------------------------------------------------------------------------
## Shared libraries to build
##--------------------------------------------------------------------------------------------------

ifeq ($(BUILDSERVER),)
SHAREDLIBS = \
../Source
endif


##--------------------------------------------------------------------------------------------------
## Binaries to build
##--------------------------------------------------------------------------------------------------

ifeq ($(BUILDSERVER),exe)
BINS = \
../Source
endif


##--------------------------------------------------------------------------------------------------
## ALL_TARGETS is a specific order: build libraries, shared libraries, and binaries
## This defines the order in which they are built
##--------------------------------------------------------------------------------------------------

ALL_TARGETS = $(LIBS) $(SHAREDLIBS) $(BINS)


##--------------------------------------------------------------------------------------------------
## Setting up global platform information.
##--------------------------------------------------------------------------------------------------
include $(SIMBAENGINE_DIR)/Makefiles/Platform.mak


##--------------------------------------------------------------------------------------------------
## Recursively make target rules
##--------------------------------------------------------------------------------------------------

default: all

all: release debug

include $(SIMBAENGINE_DIR)/Makefiles/Master_Targets.mak
include $(SIMBAENGINE_DIR)/Makefiles/Master_Eval_Targets.mak

